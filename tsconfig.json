{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "outDir": "./dist",

    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,

    "allowJs": true,
    "checkJs": true,

    "declaration": true,
    "sourceMap": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noUncheckedIndexedAccess": true,

    "skipLibCheck": true,
    "removeComments": true
  },
  "include": ["src"]
}
